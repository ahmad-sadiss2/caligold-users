# Cali Drive Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.caligolddrive.com/api

# Email Configuration (if using email service)
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here

# Google Maps API (if using Google Maps features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Development/Testing
NEXT_PUBLIC_MOCK_PAYMENTS=false

# Database Configuration (if using database)
DATABASE_URL=your_database_connection_string_here

# Other Configuration
NODE_ENV=development
